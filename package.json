{
  "name": "hello-world-express-advanced",
  "version": "0.0.1",
  "description": "Advanced express.js app in typescript, deployable on heroku :rooster: :koala: :dragon: :construction_worker:",
  "main": "index.js",
  "repository": "https://github.com/Offirmo/hello-world-express-advanced.git",
  "author": "Offirmo <offirmo.net@gmail.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": "7.x"
  },
  "scripts": {
    "__prod": "~~~~~~ PRODUCTION ~~~~~~",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc --project meta/prod",
    "start": "node dist/src.es7.cjs/index.js",
    "__dev": "~~~~~~ DEVELOPMENT ~~~~~~",
    "dev1": "tsc -p meta/dev --watch",
    "dev2": "cpx 'src/**/*.{dust,css,png}' dist/src.es7.cjs --watch --verbose",
    "dev": "npm-run-all clean --parallel dev1 dev2",
    "start:dev": "nodemon --delay 1 --config meta/dev/nodemon.json dist/src.es7.cjs/index.js | ./node_modules/.bin/bunyan",
    "__misc": "~~~~~~ MISC ~~~~~~",
    "__local_tools": "~~~~~~ Tools installed locally ~~~~~~",
    "__shortcuts": "~~~~~~ Shortcuts ~~~~~~"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "bunyan": "^1.8.10",
    "consolidate": "^0.14.5",
    "dustjs-helpers": "^1.7.3",
    "dustjs-linkedin": "^2.7.5",
    "express": "^4.15.2",
    "express-session": "^1.15.2",
    "lodash": "^4.17.4",
    "morgan": "^1.8.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "typescript-string-enums": "^0.3.2",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/bunyan": "^0.0.36",
    "@types/consolidate": "^0.0.31",
    "@types/dustjs-linkedin": "^1.2.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "^0.0.32",
    "@types/lodash": "^4.14.63",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.13",
    "@types/react-dom": "^15.5.0",
    "@types/uuid": "^2.0.29",
    "cpx": "^1.5.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "pre-commit": "^1.2.2",
    "typescript": "^2.2.2"
  },
  "pre-commit": [
    "build"
  ]
}
